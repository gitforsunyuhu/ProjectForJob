<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>index.jsp</display-name>
  
  <!-- 检验验证码的servlet -->
  <servlet>
  	<servlet-name>valiServlet</servlet-name>
  	<servlet-class>cn.edu.nju.servlet.ValiServlet</servlet-class>
  </servlet>
    <servlet-mapping>
  	<servlet-name>valiServlet</servlet-name>
  	<url-pattern>/valiServlet</url-pattern>
  </servlet-mapping>
  
  <!-- 检验是否用户名重复的servlet -->
  <servlet>
  	<servlet-name>valiUserServlet</servlet-name>
  	<servlet-class>cn.edu.nju.servlet.ValiUserServlet</servlet-class>
  </servlet>
    <servlet-mapping>
  	<servlet-name>valiUserServlet</servlet-name>
  	<url-pattern>/valiUserServlet</url-pattern>
  </servlet-mapping>
</web-app>